<view class="container">
  <view class="header">
    <text class="title">—— 命定之选 ——</text>
    <text class="subtitle">选择你的初始文明，开启征服之路</text>
  </view>

  <view class="country-list">
    <view class="card cn" bindtap="onSelect" data-code="CN">
      <view class="flag">🇨🇳</view>
      <view class="info">
        <text class="name">大汉文明</text>
        <text class="buff">【强军】步兵攻击力 +20%</text>
      </view>
    </view>

    <view class="card jp" bindtap="onSelect" data-code="JP">
      <view class="flag">🇯🇵</view>
      <view class="info">
        <text class="name">东瀛文明</text>
        <text class="buff">【坚守】弓兵防御力 +20%</text>
      </view>
    </view>

    <view class="card kr" bindtap="onSelect" data-code="KR">
      <view class="flag">🇰🇷</view>
      <view class="info">
        <text class="name">高丽文明</text>
        <text class="buff">【突击】骑兵伤害加成</text>
      </view>
    </view>

    <view class="card en" bindtap="onSelect" data-code="GB">
      <view class="flag">🇬🇧</view>
      <view class="info">
        <text class="name">不列颠文明</text>
        <text class="buff">【英雄】武将单挑伤害加成</text>
      </view>
    </view>
  </view>
</view>