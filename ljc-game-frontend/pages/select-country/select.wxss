.container {
  padding: 40rpx;
  background-color: #1a1a1a; /* 深色背景更有代入感 */
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffd700; /* 金色 */
  display: block;
}

.subtitle {
  font-size: 26rpx;
  color: #888;
  margin-top: 20rpx;
}

.country-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.card {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #333, #444);
  border: 2rpx solid #555;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
}

/* 选中态反馈 */
.card:active {
  transform: scale(0.97);
  border-color: #ffd700;
  background: linear-gradient(135deg, #444, #555);
}

.flag {
  font-size: 80rpx;
  margin-right: 40rpx;
}

.info {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 38rpx;
  font-weight: bold;
  color: #fff;
}

.buff {
  font-size: 24rpx;
  color: #ffaa00;
  margin-top: 10rpx;
}