.container { background: #f5f5f5; min-height: 100vh; padding-bottom: 40rpx; }
.header { background: #fff; padding: 20rpx 40rpx; border-bottom: 1px solid #eee; text-align: right; }
.gold { color: #d4af37; font-weight: bold; }

.army-card { background: #fff; margin: 20rpx; padding: 30rpx; border-radius: 12rpx; }
.picker-box { background: #f9f9f9; padding: 20rpx; border-radius: 8rpx; margin-bottom: 20rpx; color: #666; }
.picker-name { color: #4CAF50; font-weight: bold; }

.army-info { background: #34495e; padding: 20rpx; border-radius: 8rpx; color: #fff; }
.army-title { font-size: 22rpx; color: #95a5a6; border-bottom: 1px solid #4a6275; padding-bottom: 10rpx; margin-bottom: 15rpx; }
.army-grid { display: flex; flex-wrap: wrap; }
.army-item { width: 50%; display: flex; justify-content: space-between; padding: 5rpx 20rpx; box-sizing: border-box; }
.unit-label { font-size: 24rpx; }
.unit-value { color: #2ecc71; font-weight: bold; }
.empty-text { width: 100%; text-align: center; color: #7f8c8d; font-size: 24rpx; padding: 10rpx; }

.unit-card { background: #fff; margin: 0 20rpx 20rpx; padding: 30rpx; border-radius: 12rpx; }
.unit-main { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20rpx; }
.u-name { font-size: 32rpx; font-weight: bold; display: block; }
.u-cost { font-size: 24rpx; color: #999; }

.stepper { display: flex; border: 1px solid #ddd; border-radius: 8rpx; }
.s-btn { width: 60rpx; height: 60rpx; text-align: center; line-height: 60rpx; background: #eee; }
.s-input { width: 80rpx; height: 60rpx; text-align: center; }
.recruit-btn { width: 100% !important; border-radius: 40rpx; }
.footer-btn { margin: 40rpx; background: #95a5a6; color: #fff; }

.result-overlay { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); display: flex; align-items: center; justify-content: center; z-index: 1000; }
.result-box { background: #1a1a1a; width: 70%; padding: 60rpx; border-radius: 20rpx; border: 4rpx solid #ffd700; text-align: center; }
.res-title { color: #ffd700; font-size: 28rpx; margin-bottom: 30rpx; }
.res-name { color: #fff; font-size: 40rpx; font-weight: bold; }
.res-num { color: #4CAF50; font-size: 70rpx; font-weight: bold; margin: 20rpx 0; }
.res-tip { color: #666; font-size: 24rpx; }